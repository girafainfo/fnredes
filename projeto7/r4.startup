#configuracoes de IP
ifconfig eth0 10.2.2.254/24
ifconfig eth1 192.168.3.1/30

#configuracoes de ROTEAMENTO
route add default gw 192.168.3.2
route add -net 192.168.2.0/30 gw 192.168.3.2
route add -net 10.2.1.0/24 gw 192.168.3.2
route add -net 192.168.1.0/24 gw 192.168.3.2
route add -net 10.1.1.0/24 gw 192.168.3.2

#adicionar iptables
iptables -t nat -A POSTROUTING -o eth1 -j MASQUERADE
